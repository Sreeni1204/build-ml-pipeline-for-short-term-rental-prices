name: basic_cleaning
python_env: python_env.yaml

entry_points:
  main:
    parameters:

      input_artifact:
        description: The input artifact to use for cleaning
        type: string

      output_artifact:
        description: The output artifact to create
        type: string

      output_type:
        description: The type of the output artifact (e.g. csv, parquet)
        type: string

      output_description:
        description: A description of the output artifact
        type: string

      min_price:
        description: The minimum price for filtering
        type: string

      max_price:
        description: The maximum price for filtering
        type: string


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
