  poetry:
    file: pyproject.toml
    lock_file: poetry.lock

entry_points:
  main:
    parameters:

      mlflow_model:
        description: An MLflow serialized model
        type: string

      test_dataset:
        description: The test artifact
        type: string

    command: "python run.py  --mlflow_model {mlflow_model} --test_dataset {test_dataset}"
